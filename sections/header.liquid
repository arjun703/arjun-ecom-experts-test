<header>
  <nav class="navbar custom-container justify-content-between align-items-center">
    <div class="menu-icon open-icon d-block d-md-none" id="menuIcon">&#9776;</div>
    <div class="menu-icon close-icon" id="closeBtn">&times;</div>
    <div class="logo" onclick="window.location.href= '/' ">
      {% render 'custom-logo.liquid' %}
    </div>
    <div class="text">Find the ideal gift for your loved ones</div>
    <div class="choose-gift">
      <button class="d-flex g-20 align-items-center justify-content-center button-animated button-animated-secondary">
        <span class="custom-banner-button-label">CHOOSE GIFT</span>
        <span>
          <svg width="26" height="13" viewBox="0 0 26 13" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M0.999512 5.75L0.249512 5.75L0.249512 7.25L0.999512 7.25L0.999512 5.75ZM25.5298 7.03033C25.8227 6.73744 25.8227 6.26257 25.5298 5.96967L20.7569 1.1967C20.464 0.903807 19.9891 0.903807 19.6962 1.1967C19.4033 1.48959 19.4033 1.96447 19.6962 2.25736L23.9389 6.5L19.6962 10.7426C19.4033 11.0355 19.4033 11.5104 19.6962 11.8033C19.9891 12.0962 20.464 12.0962 20.7569 11.8033L25.5298 7.03033ZM0.999512 7.25L24.9995 7.25L24.9995 5.75L0.999512 5.75L0.999512 7.25Z" fill="#F5F5F5"/>
          </svg>
        </span>
      </button>
    </div>
  </nav>
</header>

<!-- Sidebar for Mobile -->
<div class="sidebar" id="sidebar">
  <div class="sidebar-content">
    <div class="text text-center">Find the ideal gift for your loved ones</div>
    <div class="choose-gift d-flex justify-content-center">
      <button class="d-flex g-20 align-items-center justify-content-center button-animated button-animated-secondary">
        <span class="custom-banner-button-label">CHOOSE GIFT</span>
        <span>
          <svg width="26" height="13" viewBox="0 0 26 13" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M0.999512 5.75L0.249512 5.75L0.249512 7.25L0.999512 7.25L0.999512 5.75ZM25.5298 7.03033C25.8227 6.73744 25.8227 6.26257 25.5298 5.96967L20.7569 1.1967C20.464 0.903807 19.9891 0.903807 19.6962 1.1967C19.4033 1.48959 19.4033 1.96447 19.6962 2.25736L23.9389 6.5L19.6962 10.7426C19.4033 11.0355 19.4033 11.5104 19.6962 11.8033C19.9891 12.0962 20.464 12.0962 20.7569 11.8033L25.5298 7.03033ZM0.999512 7.25L24.9995 7.25L24.9995 5.75L0.999512 5.75L0.999512 7.25Z" fill="#F5F5F5"/>
          </svg>
        </span>
      </button>
    </div>
  </div>
</div>

<style>
  header {
    width: 100%;
    background-color: #f7f7f7;
  }

  header .close-icon {
    display: none;
    font-size: 2.5em;
  }

  .sidebar-open .close-icon {
    display: block;
  }
  .sidebar-open .open-icon {
    display: none;
  }

  /* Desktop Navbar */
  .navbar {
    display: flex;
    height: 65px;
    padding: 1em;
    position: relative;
  }

  .navbar .text {
    font-family: Jost;
    font-size: 16px;
    font-weight: 400;
    line-height: 13.42px;
    text-align: center;
  }

  .menu-icon {
    cursor: pointer;
    font-size: 1.5em;
  }

  /* Sidebar (hidden by default) */
  .sidebar {
    position: fixed;
    top: 65px;
    left: -100%;
    width: 70%;
    background-color: #f2f2f2;
    height: 100%;
    transition: left 0.3s ease;
    padding: 2em 1em;
  }

  .sidebar .sidebar-content .choose-gift a {
    text-decoration: none;
  }

  .sidebar-content {
    display: flex;
    flex-direction: column;
    gap: 1.5em;
  }

  /* Responsive styles */
  @media (max-width: 768px) {
    .navbar {
      justify-content: flex-start;
    }

    .navbar .text,
    .navbar .choose-gift {
      display: none;
    }

    .navbar .logo {
      position: absolute;
      left: 50%;
      display: flex;
      top: 50%;
      transform: translate(-50%, -50%);
      align-items: center;
    }

    .sidebar {
      width: 100%;
    }

    .sidebar-open .sidebar {
      left: 0;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const menuIcon = document.getElementById('menuIcon');
    const sidebar = document.getElementById('sidebar');
    const closeBtn = document.getElementById('closeBtn');

    // Open Sidebar
    menuIcon.addEventListener('click', function () {
      document.body.classList.add('sidebar-open');
    });

    // Close Sidebar
    closeBtn.addEventListener('click', function () {
      document.body.classList.remove('sidebar-open');
    });
  });
</script>
